<%= form_with(model: block) do |form| %>
  <% if block.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(block.errors.count, "error") %> prohibited this block from being saved:</h2>

      <ul>
        <% block.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :hash_id, style: "display: block" %>
    <%= form.text_field :hash_id %>
  </div>

  <div>
    <%= form.label :prev_block, style: "display: block" %>
    <%= form.text_field :prev_block %>
  </div>

  <div>
    <%= form.label :block_index, style: "display: block" %>
    <%= form.number_field :block_index %>
  </div>

  <div>
    <%= form.label :time, style: "display: block" %>
    <%= form.number_field :time %>
  </div>

  <div>
    <%= form.label :bits, style: "display: block" %>
    <%= form.number_field :bits %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

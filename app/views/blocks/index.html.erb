<p style="color: green"><%= notice %></p>

<h1>Blocks</h1>

<div>
  <form data-controller="block">
    <div>
      <input data-action="input->block#input" type="text" data-block-target="hash" id="hash", placeholder="bitcoin hash">

      <button data-action="click->block#submit">ADD</button>
    </div>
  </form>
</div>


<%= turbo_frame_tag "blocks_frame" do %>
  <%= render @blocks %>
  <%== pagy_nav(@pagy, link_extra: "data-turbo-action='advance'") %>
<% end %>
